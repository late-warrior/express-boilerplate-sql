{
  "name": "express-rest-boilerplate",
  "version": "1.0.0",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Sriram",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "prettier": "prettier --write src/",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn prettier && yarn test",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html",
    "burn-them-all": "rm -rf node_modules yarn.lock && yarn"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:late-warrior/express-boilerplate-sql.git"
  },
  "type": "module",
  "keywords": [
    "express",
    "node",
    "node.js",
    "passport",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "REST",
    "API",
    "sqlserver",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "@prisma/client": "^2.29.0",
    "axios": "^0.21.1",
    "bcryptjs": "2.4.3",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "email-templates": "^8.0.8",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "helmet": "^4.6.0",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "jwt-simple": "0.5.6",
    "kafkajs": "^1.15.0",
    "lodash": "^4.17.4",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.13",
    "morgan": "^1.8.1",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "4.0.0",
    "pm2": "^5.1.0",
    "pug": "^3.0.1",
    "uuid": "^3.1.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.28.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "^3.0.7",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "opn-cli": "^5.0.0",
    "prettier": "2.3.2",
    "prisma": "^2.29.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
