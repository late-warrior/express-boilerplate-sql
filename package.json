{
  "name": "express-ts-rest-minimal-boilerplate",
  "version": "1.0.0",
  "description": "Express boilerplate for building RESTful APIs",
  "author": "Sriram",
  "main": "dist/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "NODE_ENV=production  yarn compile && pm2 start ecosystem.config.cjs express-app --env production",
    "start:dev": "NODE_ENV=production  yarn compile && pm2 start ecosystem.config.cjs express-app --env development",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "debug:node": "node --experimental-specifier-resolution=node --experimental-loader ts-node/esm -r ts-node/register src/index.ts",
    "compile": "tsc",
    "lint": "eslint ./src/",
    "lint:cache": "yarn lint --cache",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write src/",
    "precommit": "yarn lint",
    "test": "yarn test:c8",
    "test:c8": "c8 mocha",
    "test:watch": "mocha --watch",
    "test-only": "mocha",
    "example-hook": "echo \"Hook comes here\"",
    "burn-them-all": "rm -rf node_modules yarn.lock && yarn",
    "prisma:generate": "prisma generate",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:late-warrior/express-boilerplate-sql.git"
  },
  "type": "module",
  "keywords": [
    "express",
    "node",
    "node.js",
    "passport",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "REST",
    "API",
    "sqlserver",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "bcryptjs": "2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.2",
    "express-validation": "^3.0.8",
    "helmet": "^5.0.2",
    "http-status": "^1.5.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^1.16.0",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "passport": "^0.5.2",
    "passport-jwt": "4.0.0",
    "pm2": "^5.1.2",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@types/passport": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unicorn": "^40.1.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "prisma": "^3.9.2",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
